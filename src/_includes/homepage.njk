{% include "partials/htmlhead.njk" %}

<header>
  <p class="logo"><a href="/">Working Code Podcast</a></p>
  {# <button id="themetoggle" title="switch theme"></button> #}
  <nav>
    {% navlist collections.all | eleventyNavigation, page, 1 %}
  </nav>
</header>
<main>
  {% block content %}
    {{ content | safe }}
      {%- for post in pagelist -%}
        <article>
          <h2><a href="{{ post.url }}">Episode {{ post.data.title }}</a></h2>
          {% if post.data.date %}<p class="time"><time datetime="{{ post.data.date | dateymd }}">{{ post.data.date | datefriendly }}</time></p>{% endif %}
          <p>{{ post.templateContent | safe }}</p>
        </article>
      {%- endfor -%}
  {% endblock %}
</main>
<footer>
  <section id="cover-art"><img src="/images/cover-art-v1.jpg" alt="podcast cover art" /></section>
  <section>
    <p class="heads-up">New episodes publish weekly on Wednesday mornings (US/Eastern)</p>
    <nav>
      {% navlist collections.all | eleventyNavigation, page, 2 %}
    </nav>
    <p>
      <a href="https://www.patreon.com/bePatron?u=45624319" data-patreon-widget-type="become-patron-button">
        Become a Patron!
      </a>
      <script async src="https://c6.patreon.com/becomePatronButton.bundle.js"></script>
  </section>
</footer>

{% include "partials/htmlfoot.njk" %}
